{
  "name": "firestore-pipeline",
  "version": "2.1.1",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.1",
    "@testing-library/user-event": "^7.2.1",
    "classnames": "^2.2.6",
    "date-fns": "^2.8.1",
    "file-saver": "^2.0.2",
    "firebase": "^8.1.1",
    "firebase-admin": "^9.4.1",
    "firebase-functions": "^3.12.0",
    "json2xls": "^0.1.2",
    "lodash": "^4.17.20",
    "markdown-to-jsx": "^7.0.1",
    "moment": "^2.24.0",
    "react": "^16.12.0",
    "react-datepicker": "^2.10.1",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.0",
    "react-semantic-ui-datepickers": "^2.12.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.1",
    "to-case": "^2.0.0",
    "xlsx": "^0.15.3"
  },
  "scripts": {
    "start": "env-cmd -f .env.production react-scripts start",
    "build:test": "env-cmd -f .env.test react-scripts build",
    "build:prod": "env-cmd -f .env.production react-scripts build",
    "emulator": "firebase emulators:start --import=./test-data --export-on-exit",
    "preview": "env-cmd -f .env.production npm run build && firebase hosting:channel:deploy pipeline-preview -P prod",
    "deploy:test":"env-cmd -f .env.test npm run build && firebase deploy --only hosting -P test",
    "deploy:prod":"env-cmd -f .env.production npm run build && firebase deploy -P prod"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "env-cmd": "^10.1.0"
  }
}
